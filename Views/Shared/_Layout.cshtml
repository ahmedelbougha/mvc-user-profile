<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Book Catalog</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">User Books</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a href="/products">React Public Page</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if(ViewData["loggedin"] != null) {
                        <li><a  asp-area="" asp-controller="User" asp-action="Profile">Profile</a></li>
                        <li><a  href="/products">Products (Private Page)</a></li>                        
                        <li><a  asp-area="" asp-controller="User" asp-action="Logout">Logout</a></li>                        
                    } else {
                        <li><a  asp-area="" asp-controller="User" asp-action="Login">Login</a></li>
                    }
                </ul>                
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - User Books</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (ViewData["removeJWT"] != null) {
        <script lang="javascript">
            jQuery(document).ready(function(){
                if (@ViewData["removeJWT"]) {
                    localStorage.removeItem("jwt");
                }
            });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
